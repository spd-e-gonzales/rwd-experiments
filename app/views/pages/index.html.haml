#appForm.expanded
  %form
  
    #personalInformationSection
      .appSectionTitle
        %h2 About You
        
      #personalInformationContainer
        %fieldset
        
          #nameContainer.row
            #FirstNameContainer.appSectionRow.row
              .col.span_half
                .row
                  .col.span_5
                    %label{for:"FirstName"}
                      First name
                    %input#FirstName
                  .col.span_4
                    %label{for:"MiddleInitial"}
                      Initial
                    %input#MiddleInitial
              .col.span_half
                %label{for:"LastName"}
                  Last name
                %input#LastName
                
        %fieldset
          #DOBContainer.appSection
            .row
              .col.span_half
                Date of Birth
                .row
                  .col.span_3
                    %label{for:"DOBDay"} Day
                    %input#DOBDay
                  .col.span_3
                    %label{for:"DOBMonth"} Month
                    %select#DOBMonth.month{"aria-describedby" => "DOBMonthError", "aria-invalid" => "false", "aria-required" => "true", name: "DOBMonth"}
                      %option{value: ""} Select
                      %option{value: "1"} January
                      %option{value: "2"} February
                      %option{value: "3"} March
                      %option{value: "4"} April
                      %option{value: "5"} May
                      %option{value: "6"} June
                      %option{value: "7"} July
                      %option{value: "8"} August
                      %option{value: "9"} September
                      %option{value: "10"} October
                      %option{value: "11"} November
                      %option{value: "12"} December 
                  .col.span_3
                    %label{for:"DOBYear"} Year
                    %input#DOBDay
                    
              .col.span_half
                %label{for:"PreferedLang"}
                  Prefered Language
                %select#PreferedLang{"aria-describedby" => "PreferedLangError", "aria-invalid" => "false", "aria-required" => "true", name: "PreferedLang"}
                  %option{value: ""} Select
                  %option{value: "English"} English
                  %option{value: "French"} French

        .row
          %button.primaryButton Continue

    #investmentInformationSection                    
      .appSectionTitle
        %h2 Investment Information
      #investmentInformationContainer
        %fieldset
          #ExistingGICContainer.row
            .col.span_half
              .row
                .col.span_9
                  Do you want to open a new GIC account or invest in an existing GIC account?
                .col.span_half
                  %input#ExistingGICNew.ERR_Existing{"aria-describedby" => "ExistingGICNewError", "aria-invalid" => "false", "aria-required" => "true", name: "ExistingGIC", type: "radio", value: "New"}/
                  %label{for: "ExistingGICNew"} New
              
                .col.span_half   
                  %input#ExistingGICExisting.ERR_Existing{"aria-describedby" => "ExistingGICNewError", "aria-invalid" => "false", "aria-required" => "true", name: "ExistingGIC", type: "radio", value: "New"}/
                  %label{for: "ExistingGICExisting"} Existing
        
        %fieldset
          .row
            #TermDetailsContainer.col.span_half
              %label{for: "TermDetails"} Term
              %select#TermDetails.inputField.fullWidth{"aria-describedby" => "TermDetailsError", "aria-invalid" => "false", "aria-required" => "true"}
